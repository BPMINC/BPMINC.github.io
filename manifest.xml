<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides"
  xsi:type="MailApp">
  <Id>1e7e38da-7ad6-429a-9c6f-81aa1b9c9344</Id>
  <Version>1.0.0.2</Version>
  <ProviderName>BPM</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Agenda Generator" />
  <Description DefaultValue="A simple Office Addin to quickly generate meeting agendas"/>
  <IconUrl DefaultValue="https://bpminc.github.io/Assets/icon.jpg" />
  <HighResolutionIconUrl DefaultValue="https://bpminc.github.io/Assets/icon.jpg" />
  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="MailBox" MinVersion="1.1" />
    </Sets>
  </Requirements>
  <!-- These elements support older clients that don't support add-in commands -->
  <FormSettings>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://blank.htm"/>
      </DesktopSettings>
    </Form>
  </FormSettings>
  <Permissions>ReadWriteMailbox</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit" />
    <Rule xsi:type="ItemIs" ItemType="Appointment" FormType="Edit" />
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read" />
    <Rule xsi:type="ItemIs" ItemType="Appointment" FormType="Read" />
  </Rule>
  <DisableEntityHighlighting>false</DisableEntityHighlighting>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">

    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox" />
      </bt:Sets>
    </Requirements>
    <Hosts>
      <Host xsi:type="MailHost">

        <DesktopFormFactor>
          <FunctionFile resid="functionFile" />

          <!-- Message compose form -->      
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgDemoGroup">
                <Label resid="groupLabel" />
                <!-- Function (UI-less) button -->
                <Control xsi:type="Button" id="msgFunctionButton">
                  <Label resid="funcButtonLabel" />
                  <Supertip>
                    <Title resid="funcSuperTipTitle" />
                    <Description resid="funcSuperTipDescription" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon-16" />
                    <bt:Image size="32" resid="icon-32" />
                    <bt:Image size="80" resid="icon-80" />
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>addDefaultMsg</FunctionName>
                  </Action>
                </Control>
                <!-- Menu (dropdown) button -->
                <Control xsi:type="Menu" id="msgMenuButton">
                  <Label resid="menuButtonLabel" />
                  <Supertip>
                    <Title resid="menuSuperTipTitle" />
                    <Description resid="menuSuperTipDescription" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon-16" />
                    <bt:Image size="32" resid="icon-32" />
                    <bt:Image size="80" resid="icon-80" />
                  </Icon>
                  <Items>
                    <Item id="msgMenuItem1">
                      <Label resid="menuItem1Label" />
                      <Supertip>
                        <Title resid="menuItem1Label" />
                        <Description resid="menuItem1Tip" />
                      </Supertip>
                      <Icon>
                        <bt:Image size="16" resid="icon-16" />
                        <bt:Image size="32" resid="icon-32" />
                        <bt:Image size="80" resid="icon-80" />
                      </Icon>
                      <Action xsi:type="ExecuteFunction">
                        <FunctionName>addP2PMsg</FunctionName>
                      </Action>
                    </Item>                  
                  </Items>
                </Control>
                <!-- Task pane button -->
                <Control xsi:type="Button" id="msgOpenPaneButton">
                  <Label resid="paneButtonLabel" />
                  <Supertip>
                    <Title resid="paneSuperTipTitle" />
                    <Description resid="paneSuperTipDescription" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon-16" />
                    <bt:Image size="32" resid="icon-32" />
                    <bt:Image size="80" resid="icon-80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="TaskPaneUrl" />
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>

          <!-- Appointment compose form -->
          <ExtensionPoint xsi:type="AppointmentOrganizerCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="apptDemoGroup">
                <Label resid="groupLabel" />
                <!-- Function (UI-less) button -->
                <Control xsi:type="Button" id="apptFunctionButton">
                  <Label resid="funcButtonLabel" />
                  <Supertip>
                    <Title resid="funcSuperTipTitle" />
                    <Description resid="funcSuperTipDescription" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon-16" />
                    <bt:Image size="32" resid="icon-32" />
                    <bt:Image size="80" resid="icon-80" />
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>addDefaultMsg</FunctionName>
                  </Action>
                </Control>
                <!-- Menu (dropdown) button -->
                <Control xsi:type="Menu" id="apptMenuButton">
                  <Label resid="menuButtonLabel" />
                  <Supertip>
                    <Title resid="menuSuperTipTitle" />
                    <Description resid="menuSuperTipDescription" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon-16" />
                    <bt:Image size="32" resid="icon-32" />
                    <bt:Image size="80" resid="icon-80" />
                  </Icon>
                  <Items>
                    <Item id="apptMenuItem1">
                      <Label resid="menuItem1Label" />
                      <Supertip>
                        <Title resid="menuItem1Label" />
                        <Description resid="menuItem1Tip" />
                      </Supertip>
                      <Icon>
                        <bt:Image size="16" resid="icon-16" />
                        <bt:Image size="32" resid="icon-32" />
                        <bt:Image size="80" resid="icon-80" />
                      </Icon>
                      <Action xsi:type="ExecuteFunction">
                        <FunctionName>addP2PMsg</FunctionName>
                      </Action>
                    </Item>
                    
                  </Items>
                </Control>
                <!-- Task pane button -->
                <Control xsi:type="Button" id="apptOpenPaneButton">
                  <Label resid="paneButtonLabel" />
                  <Supertip>
                    <Title resid="paneSuperTipTitle" />
                    <Description resid="paneSuperTipDescription" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon-16" />
                    <bt:Image size="32" resid="icon-32" />
                    <bt:Image size="80" resid="icon-80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="TaskPaneUrl" />
                  </Action>
                </Control>
                <!-- Task pane button -->
                <Control xsi:type="Button" id="apptOpenPaneButton2">
                  <Label resid="paneButtonLabel" />
                  <Supertip>
                    <Title resid="paneSuperTipTitle" />
                    <Description resid="paneSuperTipDescription" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon-16" />
                    <bt:Image size="32" resid="icon-32" />
                    <bt:Image size="80" resid="icon-80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="TaskPaneUrl" />
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>

        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
          <!-- Blue icon -->
          <bt:Image id="icon-16" DefaultValue="https://bpminc.github.io/Assets/icon.jpg"/>
          <bt:Image id="icon-32" DefaultValue="https://bpminc.github.io/Assets/icon.jpg"/>
          <bt:Image id="icon-80" DefaultValue="https://bpminc.github.io/Assets/icon.jpg"/>

      </bt:Images>

      <bt:Urls>
        <bt:Url id="functionFile" DefaultValue="https://bpminc.github.io/FunctionFiles/Functions.html"/>
        <bt:Url id="TaskPaneUrl" DefaultValue="https://bpminc.github.io/InsertTextPane/InsertText.html"/>
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="groupLabel" DefaultValue="Add-in Demo"/>
 
        <bt:String id="funcButtonLabel" DefaultValue="Insert default agenda"/>
        <bt:String id="menuButtonLabel" DefaultValue="Insert specific agenda"/>
        <bt:String id="paneButtonLabel" DefaultValue="Insert custom agenda"/>

        <bt:String id="funcSuperTipTitle" DefaultValue="Inserts the default agenda"/>
        <bt:String id="menuSuperTipTitle" DefaultValue="Choose a agenda to insert"/>
        <bt:String id="paneSuperTipTitle" DefaultValue="Enter your own agenda to insert"/>

        <bt:String id="menuItem1Label" DefaultValue="P2P Agenda"/>
      </bt:ShortStrings>

      <bt:LongStrings>
 
        <bt:String id="funcSuperTipDescription" DefaultValue="Example function button."/>
        <bt:String id="menuSuperTipDescription" DefaultValue="Example drop-down menu button."/>
        <bt:String id="paneSuperTipDescription" DefaultValue="Example task pane button."/>

        <bt:String id="menuItem1Tip" DefaultValue="P2P Agenda tooltip." />
      </bt:LongStrings>

    </Resources>


  </VersionOverrides>
</OfficeApp>